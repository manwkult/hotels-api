{
  "parser": "babel-eslint",

  "env": {
    "node": true,
    "es6": true
  },

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  },

  "extends": "airbnb/base",

  "rules": {
    "no-console": 0,
    "no-path-concat": 0,
    "arrow-parens": 0,
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 0,
    "no-else-return": 0
  }
}